{
	"name": "durst_wt",
	"version": "3.0.0",
	"type": "module",
	"scripts": {
		"prepare": "husky install",
		"format": "prettier -w . && xo --fix .",
		"lint": "prettier -c . && xo",
		"start": "node index.js",
		"deploy": "node deploy-commands.js"
	},
	"dependencies": {
		"@discordjs/voice": "^0.16.1",
		"discord.js": "^14.11.0",
		"dotenv": "^16.4.1",
		"jsdom": "^24.0.0",
		"node-bash-title": "^0.0.2",
		"node-fetch": "^3.3.2",
		"util": "^0.12.5"
	},
	"devDependencies": {
		"husky": "^9.0.6",
		"lint-staged": "^15.2.0",
		"prettier": "^3.2.4",
		"xo": "^0.58.0"
	},
	"prettier": {
		"bracketSpacing": true,
		"singleQuote": false,
		"trailingComma": "es5",
		"useTabs": true
	},
	"xo": {
		"envs": [
			"es2021",
			"node"
		],
		"prettier": true,
		"rules": {
			"node/file-extension-in-import": "off",
			"n/file-extension-in-import": "off",
			"capitalized-comments": "off",
			"spaced-comment": "off",
			"unicorn/prefer-top-level-await": "off",
			"unicorn/no-await-expression-member": "off",
			"no-await-in-loop": "off",
			"unicorn/prefer-string-replace-all": "off"
		}
	},
	"lint-staged": {
		"*": "prettier -uw"
	},
	"engines": {
		"node": ">=16.6.0",
		"npm": ">=7.0.0"
	}
}
